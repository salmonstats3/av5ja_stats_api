{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off",
				"noGlobalIsNan": "off",
				"useGetterReturn": "off"
			},
			"complexity": {
				"useLiteralKeys": "off",
				"useRegexLiterals": "off"
			},
			"style": {
				"noUselessElse": "off",
				"useImportType": "off",
				"noInferrableTypes": "off"
			},
			"correctness": {
				"noConstantCondition": "off"
			}
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "single",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"trailingComma": "none"
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"attributePosition": "auto",
		"indentStyle": "space",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 120
	}
}